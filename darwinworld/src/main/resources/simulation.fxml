<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="800.0" minWidth="1000.0"
            fx:controller="project.presenter.SimulationPresenter">
    <top>
        <HBox>
            <Button text="Run Simulation" onAction="#onSimulationStartClicked" fx:id="startStopButton"/>
            <Button text="x0.5" onAction="#changeSpeed" fx:id="speedButtonx05"/>
            <Button text="x1" onAction="#changeSpeed" fx:id="speedButtonx1"/>
            <Button text="x2" onAction="#changeSpeed" fx:id="speedButtonx2"/>
            <Button fx:id="resetTrackerButton" text="Reset Tracker" onAction="#resetTracker"/>
        </HBox>

    </top>

    <left>
        <VBox>
            <HBox>
                <Label fx:id="dayNum"></Label>
            </HBox>
            <HBox>
                <Label fx:id="aliveAnimalsCount"></Label>
            </HBox>
            <HBox>
                <Label fx:id="plantsNumber"></Label>
            </HBox>
            <HBox>
                <Label fx:id="deadAnimalsCount"></Label>
            </HBox>
            <HBox>
                <Label fx:id="freePlacesOnMap"></Label>
            </HBox>
            <HBox>
                <Label fx:id="averageLivingAnimalsEnergy"></Label>
            </HBox>
            <HBox>
                <Label fx:id="averageDeadAnimalsLifespan"></Label>
            </HBox>
            <HBox>
                <Label fx:id="averageChildrenNumberForLivingAnimals"></Label>
            </HBox>
            <HBox>
                <Label fx:id="theMostPopularGenotype"></Label>
            </HBox>

            <Separator prefHeight="20.0" />

            <HBox>
                <Label fx:id="animalTitle"></Label>
            </HBox>
            <HBox>
                <Label fx:id="animalGenome"></Label>
            </HBox>
            <HBox>
                <Label fx:id="genomActivatedPart"></Label>
            </HBox>
            <HBox>
                <Label fx:id="animalEnergy"></Label>
            </HBox>
            <HBox>
                <Label fx:id="eatenPlants"></Label>
            </HBox>
            <HBox>
                <Label fx:id="childrenCounter"></Label>
            </HBox>
            <HBox>
                <Label fx:id="descendantsCounter"></Label>
            </HBox>
            <HBox>
                <Label fx:id="aliveDays"></Label>
            </HBox>
            <HBox>
                <Label fx:id="deadDay"></Label>
            </HBox>
        </VBox>
    </left>
    <center>
        <GridPane fx:id="mapGrid" alignment="CENTER" gridLinesVisible="true"/>
    </center>

</BorderPane>
